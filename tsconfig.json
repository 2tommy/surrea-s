{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "target": "es5",
    "watch": true,
    "importHelpers": true,
    "lib": [
      "es2017"
    ]
  },
  "exclude": ["node_modules"]
}